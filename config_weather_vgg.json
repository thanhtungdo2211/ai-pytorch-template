{
    "name": "Weather_VGG16",
    "n_gpu": 1,

    "arch": {
        "type": "VGGModel",
        "args": {
            "num_classes": 11,
            "vgg_type": "VGG16"
        }
    },
    "data_loader": {
        "type": "CustomImageDataLoader",
        "args":{
            "data_dir": "../dataset",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 4,
            "image_size": 224
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001,
            "momentum": 0.9,
            "weight_decay": 5e-4
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 30,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 2,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "early_stop": 20,

        "tensorboard": true
    }
}