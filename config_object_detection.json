{
    "name": "ObjectDetection_FasterRCNN",
    "n_gpu": 1,

    "arch": {
        "type": "FasterRCNN",
        "args": {
            "num_classes": 21,
            "pretrained": true
        }
    },
    "data_loader": {
        "type": "VOCDetectionDataLoader",
        "args":{
            "data_dir": "../dataset/VOC",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "image_size": 416
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.005,
            "momentum": 0.9,
            "weight_decay": 0.0005
        }
    },
    "loss": "faster_rcnn_loss",
    "metrics": [
        "detection_accuracy", "mean_average_precision"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 3,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "DetectionTrainer",
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 2,
        "verbosity": 2,
        "monitor": "max val_mean_average_precision",
        "early_stop": 10,
        "tensorboard": true
    }
}